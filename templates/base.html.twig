<!DOCTYPE html>
<html>
    <head>
        {% block meta %}
            <meta charset="UTF-8">
        {% endblock %}
        <title>{% block title %}Gamekit tools{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        {% endblock %}
    </head>
    <body>
        {% block menu %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/">Gamekit tools</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item {{ app.request.get('_route') == 'menu' ? 'active' }}">
        <a class="nav-link" href="{{ path('menu') }}">Custom GK Menu</a>
      </li>
      <li class="nav-item dropdown {{ app.request.get('_route') == 'promoted_games_news_form' ? 'active' }}">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Promoted games
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="{{ path('promoted_games_upload') }}">CSV Upload</a>
          <a class="dropdown-item" href="{{ path('promoted_games_news_form') }}">News list</a>
          <a class="dropdown-item" href="{{ path('promoted_games_profiles_form') }}">Profiles management</a>
        </div>
      </li>
      <li class="nav-item dropdown {{ app.request.get('_route') == 'screens_delay_avg' ? 'active' }}">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Screen Delays
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="{{ path('screens_delay_log') }}">Delay log</a>
          <a class="dropdown-item" href="{{ path('screens_delay_avg') }}">Delay average</a>
        </div>
      </li>
      {% if app.user %}
      <li class="nav-item">
        <a class="nav-link" href="{{ path('logout') }}">Logout</a>
      </li>
      {% endif %}
    </ul>
  </div>
</nav>
        {% endblock %}
        {% block body %}
            Body
        {% endblock %}
        {% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
